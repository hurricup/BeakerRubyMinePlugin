<idea-plugin version="2">
  <name>BeakerTestRunner</name>
  <description>Beaker test runner com for RubyMine</description>
  <version>1.0</version>
  <vendor email="" url="">Puppet Labs</vendor>

  <depends>com.intellij.modules.lang</depends>

  <description><![CDATA[
      Beaker Test Execution<br>
      For running puppet labs Beaker tests from RubyMine
    ]]></description>

  <extensions defaultExtensionNs="com.intellij">
    <configurationType implementation="com.puppetlabs.BeakerIntellijPlugin.config.BeakerConfigurationType"/>
    <runConfigurationProducer implementation="com.puppetlabs.BeakerIntellijPlugin.config.BeakerRunConfigurationProducer"/>
    <programRunner implementation="com.puppetlabs.BeakerIntellijPlugin.execution.BeakerRunProgramRunner"/>
    <programRunner implementation="com.puppetlabs.BeakerIntellijPlugin.execution.BeakerDebugProgramRunner"/>
    <programRunner implementation="org.jetbrains.plugins.ruby.ruby.debugger.RubyDebugRunner"/>
  </extensions>

  <change-notes><![CDATA[
    Initial checkin]]>
  </change-notes>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>